{
  "name": "difyrun",
  "version": "1.0.0",
  "private": true,
  "description": "Free Dify AI Workflow Templates & MCP Server Library",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "cf:build": "npx @opennextjs/cloudflare build",
    "cf:dev": "wrangler dev",
    "cf:preview": "npm run cf:build && wrangler dev",
    "cf:deploy": "npm run cf:build && wrangler deploy",
    "db:migrate": "wrangler d1 execute difyrun-db --local --file=./scripts/d1-schema.sql",
    "db:migrate:prod": "wrangler d1 execute difyrun-db --remote --file=./scripts/d1-schema.sql",
    "db:seed": "wrangler d1 execute difyrun-db --local --file=./scripts/d1-seed.sql",
    "db:seed:prod": "wrangler d1 execute difyrun-db --remote --file=./scripts/d1-seed.sql"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@types/dompurify": "3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "3.3.1",
    "isomorphic-dompurify": "2.34.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.468.0",
    "next": "15.0.4",
    "octokit": "^4.0.3",
    "p-limit": "^6.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-syntax-highlighter": "^15.6.1",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.13.16",
    "@cloudflare/workers-types": "4.20251202.0",
    "@opennextjs/cloudflare": "1.14.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wrangler": "4.51.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
